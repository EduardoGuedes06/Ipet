@page
@model RegisterEstabelecimentoModel
@{
    ViewData["Title"] = "Register";
}
<style>
    footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        padding: 15px 0;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #c4c0c0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-image: url('@Url.Content("~/imagens/Wallpapper/Fundo.png")');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }

    .content-container {
        background: url(images/background-pattern.png);
        width: 15%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .form-container {
        -webkit-box-shadow: 0px 0px 3px 0px rgba(0,0,0,0.75);
        -moz-box-shadow: 0px 0px 3px 0px rgba(0,0,0,0.75);
        box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.75);
        background-color: rgb(236, 226, 233);
        padding: 20px;
        border-radius: 10px;
        max-width: 750px;
        max-height: 890px;
        min-width: 590px;
        min-height: 380px;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .text-danger-custom {
        color: red !important;
    }
</style>

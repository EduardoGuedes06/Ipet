<head>
    <title>IPet</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/vendor.css">
    <link rel="stylesheet" href="~/css/dog.css" />
    @* <link rel="stylesheet" type="text/css" href="~/css/style.css"> *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&family=Open+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <section class="py-5 form-container">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <a asp-page="/Account/Register" class="btn btn-primary" style="background-color: #8e9599; color: white;">
                                <i class="fas fa-store" style="color: #FFFFFF;"></i> Cadastro Usuario
                            </a>

                            <a asp-page="/Account/Login" class="btn btn-primary" style="background-color: #8e9599; color: white;">
                                <i class="fas fa-sign-in-alt" style="color: #ffffff;"></i> Entrar
                            </a>
                        </div>
                        <h1 class="text-center mb-4" style="font-size: 2.5rem; color: #333;">
                            <a href="~/">
                                <img src="~/imagens/Logos/logo_Nova.png" alt="logo" style="max-width: 100px; border-radius: 20px;" class="img-fluid">
                            </a>
                        </h1>
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row">
                            <fieldset>
                                <legend>Dados do Estabelecimento</legend>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="email" class="form-label">Endereço de Email</label>
                                        <input asp-for="Input.Email" class="form-control col-12" placeholder="Insira seu email" autocomplete="username" aria-required="true" />
                                        <span asp-validation-for="Input.Email" class="text-danger" style="color: red;"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="nome" class="form-label">Nome</label>
                                        <input asp-for="Input.Nome" class="form-control col-12" placeholder="Insira o Nome" autocomplete="new-Name" aria-required="true" />
                                        <span asp-validation-for="Input.Nome" class="text-danger" style="color: red;"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="cpf" class="form-label">CNPJ</label>
                                        <input asp-for="Input.Cnpj" class="form-control col-12" placeholder="00.000.000/0000-00" autocomplete="new-cnpj" aria-required="true" />
                                        <span asp-validation-for="Input.Cnpj" class="text-danger" style="color: red;"></span>
                                    </div>
                                    <div class="col-md-6">
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset>
                                <legend>Endereço</legend>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label asp-for="Input.Cep" class="control-label"></label>
                                        <input asp-for="Input.Cep" class="form-control col-12" placeholder="Insira o Cep" aria-required="true" />
                                        <span asp-validation-for="Input.Cep" class="text-danger" style="color: red;"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Input.Numero" class="control-label"></label>
                                        <input asp-for="Input.Numero" class="form-control col-12" placeholder="Insira a Rua" aria-required="true" />
                                        <span asp-validation-for="Input.Numero" class="text-danger" style="color: red;"></span>
                                    </div>
                                </div>
                            </fieldset>
                            <legend>Autenticação</legend>
                            <div class="col-md-6">
                                <label for="senha" class="form-label">Senha</label>
                                <input asp-for="Input.Password" class="form-control col-12" placeholder="Insira sua Senha" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger" style="color: red;"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="senha2" class="form-label">Confirmar Senha</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control col-12" placeholder="Insira a senha Novamente" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger" style="color: red;"></span>
                            </div>
                            <div class="mb-3 d-flex justify-content-center align-items-center" style="margin-top: 40px;">
                                <button type="submit" class="btn btn-primary" style="background-color: #8e9599; color: white;">
                                    <i class="fas fa-user-plus" style="color: white;"></i> Criar Conta
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="js/plugins.js"></script>
    <script src="js/script.js"></script>
  </body>

